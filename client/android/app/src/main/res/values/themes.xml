<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Notice" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主色调 - 深蓝绿色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 次要色 -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- 背景色 -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>

        <!-- 状态栏 -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- 刘海屏适配 -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- 消息详情弹窗主题 -->
    <style name="Theme.Notice.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>
</resources>
